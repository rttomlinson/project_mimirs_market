{{#each products as |product|}}
    <div class="row">
        <div class="{{ xsColWidth 4 }}">
            <a href="{{ productPath product.id }}">
                <div class="product-image">
                    <img class="img-responsive" src="{{ product.image_url }}">
                </div>
                <div>
                    {{ product.name }}
                </div>
                <div>
                    {{ product.price }}
                </div>
            </a>
            <form action="{{cartItemDestroyPath product.id}}" method="post">
                <button type="submit">Remove from Cart</button>
            </form>
        </div>
        <div class="{{ xsColWidth 8 }}">
            <div>
                Quantity: {{ product.quantity }}
            </div>
            <div>
                <form action="{{cartIncPath product.id}}" method="post">
                    <button type="submit">Increase</button>
                </form>
            </div>
            <div>
                <form action="{{cartDecPath product.id}}" method="post">
                    <button type="submit">Decrease</button>
                </form>
            </div>
            <div>
                <form action="{{cartUpdatePath product.id}}" method="post">
                    <input type="number" name="quantity">
                    <button type="submit">Change quantity</button>
                </form>
            </div>
        </div>
    </div>
{{/each}}
<div class="row">
    <h2>Cart Total</h2>
    <div class="col-xs-12">
        {{ itemsTotal currentUser.cart }}
    </div>
    <div class="col-xs-12">
        <a href="{{ checkoutPath }}" class="btn btn-primary">Checkout</a>
    </div>
</div>
