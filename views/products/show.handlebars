<div class="row">
    <img src={{product.image_url}}></img>
    <h3>{{product.name}}</h3>
    <div class="col-xs-12">
        <h3>Price</h3>
        <div>
            {{product.price}}
        </div>
    </div>
    <div class="col-xs-12">
        <h3>Description</h3>
        <div>
            {{product.description}}
        </div>
    </div>
</div>
<div class="row">
    <h2>Similar Products</h2>
    {{> shared/_displayProducts products=suggestedProducts colWidth=4}}
</div>
