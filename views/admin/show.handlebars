<h1 class="text-center">Admin Orders Show</h1>
<div class="row">
    <div class="{{ xsColWidth 4 }} col-xs-offset-1">
        <h2>Ordered Items</h2>
        {{#each orderInfo.orderItems as |item|}}
        <table class="table">
            <thead>
                <tr>
                    <th>Field</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Name</td>
                    <td>{{item.name}}</td>
                </tr>
                <tr>
                    <td>Price</td>
                    <td>{{ USDollars item.price}}</td>
                </tr>
                <tr>
                    <td>SKU</td>
                    <td>{{item.sku}}</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>{{item.description}}</td>
                </tr>
                <tr>
                    <td>Category</td>
                    <td>{{item.category_id}}</td>
                </tr>
                <tr>
                    <td>Quantity</td>
                    <td>{{item.quantity}}</td>
                </tr>
            </tbody>
        </table>
        {{/each}}
    </div>
    <div class="{{ xsColWidth 4 }} col-xs-offset-2">
        <h2>Customer Information</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Field</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>First Name</td>
                    <td>{{orderInfo.billingInfo.fname}}</td>
                </tr>
                <tr>
                    <td>Last Name</td>
                    <td>{{orderInfo.billingInfo.lname}}</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>{{orderInfo.billingInfo.email}}</td>
                </tr>
                <tr>
                    <td>Street</td>
                    <td>{{orderInfo.billingInfo.address.street}}</td>
                </tr>
                <tr>
                    <td>City</td>
                    <td>{{orderInfo.billingInfo.address.city}}</td>
                </tr>
                <tr>
                    <td>State</td>
                    <td>{{orderInfo.billingInfo.address.state}}</td>
                </tr>
            </tbody>
        </table>
        <h2>Billing Information</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Field</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Checkout Date</td>
                    <td>{{orderInfo.paymentInfo.checkoutDate}}</td>
                </tr>
                <tr>
                    <td>Stripe Token</td>
                    <td>{{orderInfo.paymentInfo.stripeToken}}</td>
                </tr>
                <tr>
                    <td>Card Type</td>
                    <td>{{orderInfo.paymentInfo.cardType}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
