<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Description</th>
            <th>Transaction Date</th>
            <th>Order Total</th>
            <th>Customer Email</th>
            <th>Customer State</th>
        </tr>
    </thead>
    <tbody>
        {{#each orders as |order|}}
        <tr>
            <td> <a href="{{ adminOrderPath order._id}}">{{order._id}}</a>
            </td>
            <td>
                {{#each order.description as |orderItem|}}
                <a href="{{ productPath orderItem.id}}">{{orderItem.name}}</a> {{/each}}
            </td>
            <td>{{order.checkoutDate}}</td>
            <td>{{order.revenue}}</td>
            <td>{{order.customerEmail}}</td>
            <td>{{order.customerState}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
